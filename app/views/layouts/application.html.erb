<!DOCTYPE html>
<html>
<head>
  <title><%= t 'menu.title' %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse" role="navigation">
	<%= link_to (t 'menu.lists'), lists_url, class: "btn btn-default" %>
	<%= link_to (t 'menu.favorites'), favorite_lists_url, class: "btn btn-default" %>
	<%= link_to (t 'menu.public'), public_lists_url, class: "btn btn-default" %>
	<%= link_to (t 'menu.log_out'), destroy_user_session_url, method: :delete, class: "btn btn-default pull-right" %>
</nav>
<body>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>
<%= yield %>

</body>
</html>
