<tr>
	<td><%= status_list(task) %></td>
	<% if @list.user == current_user %>
		<td><%= link_to (t 'tasks.remove'), list_task_path(@list, task),
		          method: :delete, data: { confirm: (t 'tasks.remove_message') }, class: "btn btn-default btn-xs" %>
		    <%= link_to (t 'tasks.done'), list_task_path(@list, task), method: :patch, class: task.status ? "btn btn-default btn-xs disabled" : "btn btn-default btn-xs" %></td> 
	<% end %>
</tr>
