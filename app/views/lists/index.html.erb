<div class="jumbotron">   
	<h1>Minhas Listas
		<br>
		<small><%= current_user.email %></small>
	</h1>
</div>
<div>
		<% if @lists.present? %>
			<%= render "shared/list_all", lists: @lists%>
		<% else %>
			<p>Adicione novas listas!</p>
		<% end %>	

		<%= simple_form_for @list, :url => lists_path do |f| %>
			<%= f.input :name, :class => "form-control"%>
			<%= f.button :submit, "Adicionar lista", :class => "btn btn-default" %>
		<% end %>   
		
</div>